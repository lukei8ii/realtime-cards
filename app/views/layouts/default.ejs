<!doctype html>
<html>
<head>
  <meta charset='utf-8'>
  <%- css('application.css') %>
  <title><%- title %></title>
</head>
<body>
  <h1><%- title %></h1>
  <p>Welcome to <%- title %></p>

  <% if (user) { %>
    <p>Hi there, <%- user.username %></p>
  <% } else { %>
    <a href="/auth/facebook">Login with Facebook</a>
  <% } %>

  <%- body %>

  <%- js('application.js') %>
  <script src="/socket.io/socket.io.js"></script>
</body>
</html>